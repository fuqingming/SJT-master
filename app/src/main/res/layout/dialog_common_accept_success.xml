<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
	android:orientation="vertical"
    android:background="@drawable/shape_rectangle_dialog_edit_bg"
	android:gravity="center_horizontal">

	<ImageView
		android:layout_width="120dp"
		android:layout_height="120dp"
		android:background="@mipmap/shenhe"
		android:layout_marginTop="30dp"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="15dp"
		android:text="信息审核中"
		android:textColor="@color/black_color"
		android:textSize="25dp" />
	<ImageView
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_marginTop="20dp"
		android:background="@color/spliter_line_color"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"/>
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="20dp">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/eleven"
			android:layout_marginLeft="35dp"
			android:layout_marginRight="35dp"
			android:textColor="@color/black_color"
			android:text="审核结果将发送系统消息，也可在“我的-消息”中查看"/>

	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="20dp"
		android:background="@drawable/shape_rectangle_dark"
		android:layout_marginRight="35dp"
		android:layout_marginLeft="35dp"
		android:gravity="center">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/fourteen"
			android:textColor="@color/black_color"
			android:text="审核需要"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/fourteen"
			android:textColor="@color/red"
			android:text="1"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/fourteen"
			android:textColor="@color/black_color"
			android:text="个工作日"/>

	</LinearLayout>

	<TextView
		android:id="@+id/tv_btn"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:text="我知道了"
		android:textSize="25dp"
		android:textColor="@color/white_color"
		android:background="@color/red"
		android:layout_marginTop="20dp"
		android:gravity="center"/>
</LinearLayout>