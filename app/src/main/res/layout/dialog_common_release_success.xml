<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
	android:orientation="vertical"
    android:background="@drawable/shape_rectangle_dialog_edit_bg"
	android:gravity="center_horizontal">

	<ImageView
		android:layout_width="120dp"
		android:layout_height="120dp"
		android:background="@mipmap/receipt_success"
		android:layout_marginTop="30dp"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="25dp"
		android:textColor="@color/black_color"
		android:layout_marginTop="15dp"
		android:text="接单成功"
		/>
	<ImageView
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_marginTop="20dp"
		android:background="@color/spliter_line_color"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"/>
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="20dp">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/eightteen"
			android:textColor="@color/black_color"
			android:text="客服电话:"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/eightteen"
			android:textColor="@color/black_color"
			android:text="18888888888"/>
	</LinearLayout>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="@dimen/fourteen"
		android:textColor="@color/dark"
		android:text="请尽联系客服预约量房时间"
		android:layout_marginTop="20dp"/>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="@dimen/fourteen"
		android:textColor="@color/dark"
		android:text="@string/msg_release_success"
		android:layout_marginTop="5dp"/>
	<TextView
		android:id="@+id/tv_btn"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:text="我知道了"
		android:textSize="25dp"
		android:textColor="@color/white_color"
		android:background="@color/red"
		android:layout_marginTop="30dp"
		android:gravity="center"/>
</LinearLayout>